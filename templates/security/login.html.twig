{% extends 'base.html.twig' %}

{% block title %}Log in! -
	{{ parent() }}
{% endblock %}

{% block body %}

	{{ form_start(form) }}
	<h1>
		Log in
	</h1>

	{% if app.user %}
		<div class="mb-3">
			You are logged in as
			{{ app.user.username }},
			<a href="{{ path('security_logout') }}">Logout</a>
		</div>
	{% endif %}

	{{ form_widget(form.email, {'value': last_username}) }}
	{{ form_row(form.password) }}

	<button class="btn btn-lg btn-primary" type="submit">
		Sign in
	</button>

	{{ form_end(form) }}
	{# </form> #}
{% endblock %}
