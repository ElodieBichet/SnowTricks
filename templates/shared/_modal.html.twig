<!-- Modal -->
<div class="modal fade" id="modalConfirm-{{ trick.id }}" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="modalConfirmLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="staticBackdropLabel">Delete the trick
					<i>{{ trick.name }}</i>
					(#{{ trick.id }})</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Are your sure you want to permanently delete this trick? This action is irreversible.
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-danger">
					<i class="fas fa-trash-alt"></i>
					Delete</button>
			</div>
		</div>
	</div>
</div>
