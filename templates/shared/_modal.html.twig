<!-- Modal -->
<div class="modal fade" id="modalConfirm-{{ itemId }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalConfirmLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="staticBackdropLabel">Delete the
					{{ itemType }}
					<i>{{ itemName }}</i>
					(#{{ itemId }})</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true"></span>
				</button>
			</div>
			<div class="modal-body">
				Are your sure you want to permanently delete this
				{{ itemType }}? This action is irreversible.
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-danger">
					<i class="fas fa-trash-alt"></i>
					Delete</button>
			</div>
		</div>
	</div>
</div>
