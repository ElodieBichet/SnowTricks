<div class="trick-card col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
	<div class="card mb-4">
		<a href="{{ path('trick_show', {'group_slug': trick.trickGroup.slug, 'slug': trick.slug}) }}"><img src="{{ asset('img/visit-almaty-wN4D-mVR7fE-unsplash.jpg') }}" class="img-fluid" alt="Image de {{ trick.name }}"></a>
		<div class="card-body p-0 d-flex flex-column justify-content-between">
			<div class="d-flex align-items-start">
				<h2 class="card-title h5 flex-grow-1 p-2 mb-0">
					<a href="{{ path('trick_show', {'group_slug': trick.trickGroup.slug, 'slug': trick.slug}) }}">{{ trick.name }}</a>
				</h2>
				<a class="btn btn-primary mr-1 mt-1" href="{{ path('trick_edit', {'id': trick.id}) }}" title="Edit this trick">
					<i class="fas fa-pencil-alt"></i>
				</a>
				{{ include('trick/_delete_form.html.twig') }}
			</div>
			<div class="card-footer d-flex align-items-end justify-content-between px-2 py-0">
				<p class="badge badge-info badge-pill mb-1">
					{{ trick.trickGroup.name }}
				</p>
				<p class="mb-1">
					{{ random(0, 10) }}
					<i class="far fa-comments"></i>
				</p>
			</div>
		</div>
	</div>
</div>
