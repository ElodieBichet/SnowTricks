{% for message in messages %}
	<div class="row mb-4 justify-content-between">
		<div class="col-12 col-sm-5 col-lg-3">
			{% set bgAvatar = random(['00779e/fff','4da3bd/fff','012A4A/fff', '013A63/fff', '01497C/fff', '014F86/fff', '2A6F97/fff', '2C7DA0/fff', '468FAF/fff', '61A5C2/fff', '89C2D9', 'A9D6E5']) %}
			<img
			src="{{ message.author.avatar }}?d=https%3A%2F%2Fui-avatars.com%2Fapi%2F/{{ message.author.fullname | trim }}/60/{{ bgAvatar }}&amp;s=60" alt="{{ message.author.fullname }}" class="float-start me-2">
			{# <img src="https://www.gravatar.com/avatar/{{ message.author.email | trim }}?s=60&amp;d=https%3A%2F%2Fui-avatars.com%2Fapi%2F/{{ message.author.fullname | trim }}/60/random" alt="{{ message.author.fullname }}" class="float-start me-2"> #}
			<i class="far fa-user"></i>
			{{ message.author.fullname }}<br>
			<span class="small" style="font-size: 0.75rem;">
				<i class="far fa-clock"></i>
				{{ message.createdAt|date('F j, Y \\a\\t H:i') }}
			</span>
		</div>
		<div class="col ps-3 border-start">
			{{ message.content }}
		</div>
		{% if is_granted('MESSAGE_DELETE', message) %}
			<div class="col-auto">
				{{ include('message/form/_delete_form.html.twig') }}
			</div>
		{% endif %}
	</div>
{% endfor %}

{% if isLastPage == false %}
	<span class="d-none">
		{{ path('message_page_with_limit', {trickId: trickId, page: page+1, limit: limit}) }}
	</span>
{% else %}
	<span class="d-none"></span>
{% endif %}
